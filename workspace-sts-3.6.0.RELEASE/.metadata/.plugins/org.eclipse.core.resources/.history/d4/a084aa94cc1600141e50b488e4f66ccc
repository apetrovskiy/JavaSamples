package org.probe.springdepinjectiontest;

public class PoeticJuggler extends Juggler {
	private Poem poem;
	
	public PoeticJuggler(Poem poem) {
		super();
		this.poem = poem;
	}
	
	public void perform() { // throws PerformanceException {
		super.perform();
		System.out.println("While reciting...");
		poem.recite();
	}
}
